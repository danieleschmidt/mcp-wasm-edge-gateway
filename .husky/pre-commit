#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸ” Running pre-commit checks..."

# Check if we're in a Rust project
if [ ! -f "Cargo.toml" ]; then
    echo "âš ï¸  No Cargo.toml found, skipping Rust checks"
    exit 0
fi

# Format check
echo "ğŸ“ Checking code formatting..."
if ! cargo fmt --all -- --check; then
    echo "âŒ Code formatting check failed!"
    echo "ğŸ’¡ Run 'cargo fmt' to fix formatting issues"
    exit 1
fi

# Clippy check
echo "ğŸ” Running clippy lints..."
if ! cargo clippy --all-targets --all-features -- -D warnings; then
    echo "âŒ Clippy checks failed!"
    echo "ğŸ’¡ Fix the clippy warnings before committing"
    exit 1
fi

# Security audit
echo "ğŸ”’ Running security audit..."
if ! cargo audit; then
    echo "âš ï¸  Security vulnerabilities found!"
    echo "ğŸ’¡ Review and fix security issues before committing"
    exit 1
fi

# Check for secrets in staged files
echo "ğŸ•µï¸  Checking for secrets..."
if git diff --cached --name-only | xargs grep -l "api_key\|password\|secret\|token" 2>/dev/null; then
    echo "âŒ Potential secrets found in staged files!"
    echo "ğŸ’¡ Remove secrets before committing"
    exit 1
fi

# Test check (only if tests exist)
if [ -d "tests" ] || grep -q "\[\[test\]\]" Cargo.toml 2>/dev/null; then
    echo "ğŸ§ª Running tests..."
    if ! cargo test --all-features; then
        echo "âŒ Tests failed!"
        echo "ğŸ’¡ Fix failing tests before committing"
        exit 1
    fi
fi

echo "âœ… All pre-commit checks passed!"