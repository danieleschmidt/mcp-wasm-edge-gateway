# MCP WASM Edge Gateway - Environment Configuration

# Gateway Configuration
GATEWAY_BIND_ADDRESS=0.0.0.0:8080
GATEWAY_LOG_LEVEL=info
GATEWAY_MAX_CONNECTIONS=100
GATEWAY_REQUEST_TIMEOUT_MS=5000

# Model Configuration
MODEL_PATH=/opt/models/
MODEL_CACHE_SIZE_MB=256
LOCAL_MODEL_NAME=phi-3-mini-q4
MAX_TOKENS=1024

# Cloud Fallback Configuration
CLOUD_MCP_ENDPOINT=https://api.example.com/v1/mcp
CLOUD_API_KEY=your-api-key-here
FALLBACK_THRESHOLD_MS=2000

# Offline Queue Configuration
QUEUE_SIZE=1000
QUEUE_PERSISTENCE_PATH=/var/lib/mcp/queue
SYNC_INTERVAL_SECONDS=300
COMPRESSION_TYPE=zstd

# Security Configuration
TLS_CERT_PATH=/etc/mcp/cert.pem
TLS_KEY_PATH=/etc/mcp/key.pem
USE_TPM=false
TPM_DEVICE=/dev/tpm0
REQUIRE_ATTESTATION=false

# Telemetry Configuration
TELEMETRY_ENABLED=true
TELEMETRY_EXPORT_INTERVAL_SECONDS=60
TELEMETRY_COMPRESSION=lz4
METRICS_ENDPOINT=https://metrics.example.com/v1/edge

# Power Management
LOW_POWER_MODE=false
CPU_THROTTLE_PERCENT=100
GPU_ENABLED=true
SLEEP_ON_IDLE_MS=1000

# Development Settings
RUST_LOG=mcp_gateway=debug,info
RUST_BACKTRACE=1
CARGO_TARGET_DIR=./target

# Testing Configuration
TEST_DATABASE_URL=sqlite::memory:
TEST_MODEL_PATH=./test-models/
INTEGRATION_TEST_TIMEOUT=30

# Docker Configuration
CONTAINER_USER=mcp-gateway
CONTAINER_UID=1000
CONTAINER_GID=1000

# Monitoring
PROMETHEUS_PORT=9090
HEALTH_CHECK_PORT=8081
METRICS_PATH=/metrics

# Build Configuration
BUILD_TARGET=wasm32-unknown-unknown
OPTIMIZE_FOR_SIZE=true
ENABLE_LTO=true
STRIP_SYMBOLS=true